---
import { User, Mail, Building2, MessageSquare, Phone, CircleHelp } from "lucide-react";
import BotonFlotanteAnimado from "./movimiento/BotonFlotanteAnimado";

const { color = "#F5F5F5" } = Astro.props;
const ringStyle = { '--ring-color': color };
const iconStyle = { color };
const buttonBgStyle = {
  backgroundColor: color,
  opacity: 0.1
};
---

<section id="contacto" style="background-color: #FAFAFA" class="py-24 px-6">
  <div class="max-w-3xl mx-auto text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">¿Listo para conectar?</h2>
    <p class="text-black text-lg">Déjanos tus datos y un experto se pondrá en contacto contigo muy pronto.</p>
  </div>

  <form 
    action="https://formsubmit.co/marketing@conecta.mx"
    method="POST"
    class="max-w-2xl mx-auto bg-white p-10 rounded-3xl shadow-xl grid gap-6"
  >
    <input type="hidden" name="_captcha" value="false" />
  <input type="hidden" name="_next" value="https://conecta.mx/thanks">
<input type="hidden" name="_redirect" value="https://conecta.mx/thanks">

    <!-- Nombre y Apellido -->
    <div class="grid md:grid-cols-2 gap-4">
      <div>
        <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-1">
          <User class="w-5 h-5" style={iconStyle} /> Nombre
        </label>
        <input type="text" name="nombre" required placeholder="Ej. María"
          style={ringStyle}
          class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-[var(--ring-color)] transition"
        />
      </div>
      <div>
        <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-1">
          <User class="w-5 h-5" style={iconStyle} /> Apellido
        </label>
        <input type="text" name="apellido" required placeholder="Ej. López"
          style={ringStyle}
          class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-[var(--ring-color)] transition"
        />
      </div>
    </div>

    <!-- Correo -->
    <div>
      <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-1">
        <Mail class="w-5 h-5" style={iconStyle} /> Correo electrónico
      </label>
      <input type="email" name="email" required placeholder="tucorreo@email.com"
        style={ringStyle}
        class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-[var(--ring-color)] transition"
      />
    </div>

    <!-- Teléfono -->
    <div>
      <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-1">
        <Phone class="w-5 h-5" style={iconStyle} /> Teléfono / WhatsApp
      </label>
      <input type="tel" name="telefono" placeholder="Ej. +52 55 1234 5678"
        style={ringStyle}
        class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-[var(--ring-color)] transition"
      />
    </div>

    <!-- Empresa -->
    <div>
      <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-1">
        <Building2 class="w-5 h-5" style={iconStyle} /> Empresa
      </label>
      <input type="text" name="empresa" placeholder="Nombre de la empresa"
        style={ringStyle}
        class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-[var(--ring-color)] transition"
      />
    </div>

    <!-- Solución -->
    <div>
      <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-1">
        <CircleHelp class="w-5 h-5" style={iconStyle} /> Solución de tu interés
      </label>
      <select
        name="solucion"
        required
        style={ringStyle}
        class="w-full px-4 py-3 border border-gray-300 rounded-xl bg-white text-gray-800 focus:outline-none focus:ring-2 focus:ring-[var(--ring-color)] transition"
      >
        <option value="" disabled selected>Selecciona una opción</option>
        <option value="conecta-cripto">Conecta Cripto</option>
    
        <option value="hermes">Hermes</option>
        <option value="google-cloud">Google Cloud Partner</option>
      </select>
    </div>

    <!-- Mensaje -->
    <div>
      <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-1">
        <MessageSquare class="w-5 h-5" style={iconStyle} /> ¿Cómo podemos ayudarte?
      </label>
      <textarea
        name="mensaje"
        rows="4"
        placeholder="Describe brevemente tu necesidad o proyecto..."
        style={ringStyle}
        class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-[var(--ring-color)] transition resize-none"
      ></textarea>
    </div>

    <!-- Botón -->
<!-- Botón -->
<div class="text-center mt-6">
  <BotonFlotanteAnimado texto="Enviar Mensaje" type="submit" color={color} client:load />
</div>
  </form>
</section>
