---
import ScrollReveal from '../components/movimiento/ScrollReveal.jsx';
import LogoCarousel from "../components/LogoCarousel.jsx";
import HeroScrollWords from "../components/HeroScrollWords.jsx";

const logosempresas = [
  "/Homepage/01_Banorte.png",
  "/Homepage/02_Invex.png",
  "/Homepage/03_Nissan.png",
  "/Homepage/04_Afirme.png",
  "/Homepage/05_Kubo.png",
  "/Homepage/06_Prosa.png",
  "/Homepage/07_CajaMorelia.png",
  "/Homepage/08_Bankaool.png",
  "/Homepage/09_Fincomun.png",
  "/Homepage/10_BancoDonde.png",
  "/Homepage/11_Covalto.png",
  "/Homepage/12_CoopDesarrollo.png",
];
const carouselTitle = "Empresas que confían en nosotros";
---

<section class="bg-[#FAFAFA] py-24 px-6 md:px-12">
  <ScrollReveal client:visible>
    <div class="max-w-5xl mx-auto text-center">
      <h1 class="text-4xl md:text-6xl font-light leading-tight text-gray-900">
        Impulsa tu negocio </br>con tecnología que&nbsp;
        <span class="font-medium">
          <HeroScrollWords client:only="react" />
        </span>
      </h1>

      <p class="mt-6 text-lg md:text-xl text-black">
        Soluciones en cifrado de datos, HSMs, ciberseguridad, </br>
        cumplimiento, conexión financiera y servicios en la nube.
      </p>

      <a
        href="/contacto"
        class="mt-8 inline-block bg-white text-black font-medium px-8 py-3 rounded-full shadow-lg hover:bg-gray-300 transition-colors duration-300"
      >
        Hablemos
      </a>

      <div class="mt-12">
        <div class="max-w-6xl mx-auto">
          <LogoCarousel logos={logosempresas} title={carouselTitle} client:only="react" />
        </div>
      </div>
    </div>
  </ScrollReveal>
</section>
