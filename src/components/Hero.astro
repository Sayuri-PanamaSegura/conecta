---
import ScrollReveal from '../components/movimiento/ScrollReveal.jsx';
import LogoCarousel from "../components/LogoCarousel.jsx";
import HeroAnimatedGradient from './movimiento/HeroAnimatedGradient';
import BotonFlotanteAnimado from './movimiento/BotonFlotanteAnimado';


const logosempresas = [
  "/Homepage/01_Banorte.png",
  "/Homepage/02_Invex.png",
  "/Homepage/03_Nissan.png",
  "/Homepage/04_Afirme.png",
  "/Homepage/05_Kubo.png",
  "/Homepage/06_Prosa.png",
  "/Homepage/07_CajaMorelia.png",
  "/Homepage/08_Bankaool.png",
  "/Homepage/11_Covalto.png",
  "/Homepage/12_CoopDesarrollo.png",
];
const carouselTitle = "Empresas que confían en nosotros";
---

<section class="bg-[#FAFAFA] pt-0 pb-12 px-6 md:px-12">

  <ScrollReveal client:visible>
      <div class="max-w-4xl mx-auto text-center mb-10">

      <h1 class="text-4xl sm:text-3xl md:text-5xl font-light  text-black leading-snug whitespace-pre-line">
        Impulsa tu negocio </br>con tecnología que&nbsp;

 <HeroAnimatedGradient client:visible texto={"conecta, protege y cumple"}  />
      </h1>
  <div class="max-w-3xl mx-auto text-center mb-5 text-base md:text-lg text-black leading-relaxed mt-6">
  <p class="mt-0 text-lg md:text-xl text-black">
    Soluciones en cifrado de datos, HSMs, ciberseguridad, </br>
    cumplimiento, conexión financiera y servicios en la nube.
  </p>
</div>

<section class="text-center my-12">
  <BotonFlotanteAnimado texto="Agenda demo" href="/contacto" color="black" client:only="react"/>
</section>
      <div class="mt-12">
        <div class="max-w-6xl mx-auto">
          <LogoCarousel logos={logosempresas} title={carouselTitle} client:only="react" />
        </div>
      </div>
    </div>
  </ScrollReveal>
</section>
