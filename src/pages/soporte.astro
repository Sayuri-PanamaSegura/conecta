---
import Layout from "../layouts/Layout.astro";
import {  User, Mail, MessageSquare, Phone, Building2, CircleHelp, FileText, File, FilePlus, FileImage, FileLock, FileSearch  } from "lucide-react";
import BotonFlotanteAnimado from "../components/movimiento/BotonFlotanteAnimado";
---
<Layout ocultarSuscripcion={true}>
  <!-- tu contenido de contacto aquí -->
 
<section id="soporte" class="py-32 px-6 bg-[#f5f5f5]">
        <div class="max-w-6xl mx-auto mb-6">
    <a href="/" class="flex items-center text-sm hover:underline transition" style={`color: black`}>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
      </svg>
      
    </a>
  </div>
<div class="max-w-2xl mx-auto mb-12 px-4">
 <div class="flex flex-col md:flex-row items-center md:items-center justify-center gap-8 md:gap-12">


    <!-- Imagen a la izquierda -->
   <img
  src="/image.png"
  alt="Ícono de ayuda"
  class="w-40 h-auto md:w-52 md:max-w-[200px]"
/>

    <!-- Texto a la derecha -->
    <div class="text-center md:text-left">
      <h2 class="text-3xl md:text-4xl font-bold text-black mb-4">
        ¿Necesitas nuestra ayuda?
      </h2>
      <p class="text-lg text-black">
        Compártenos en este formulario tu problema y uno de nuestros agentes de servicio dará seguimiento inmediato a tu solicitud.
      </p>
    </div>
  </div>
</div>


  <form
  action="https://formsubmit.co/soporte@conecta.mx"
      method="POST"
    class="max-w-2xl mx-auto bg-white p-10 rounded-3xl shadow-xl grid gap-6"
  >
    <input type="hidden" name="_captcha" value="false">
    <input type="hidden" name="_next" value="https://conecta.mx/gracias">
<input type="hidden" name="_redirect" value="https://conecta.mx/gracias">


    <!-- Nombre y Apellido -->
    <div class="grid md:grid-cols-2 gap-4">
      <div>
        <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-1">
          <User class="w-5 h-5 text-purple-500" /> Nombre
        </label>
        <input
          type="text"
          name="nombre"
          required
          placeholder="Ej. María"
          class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:black transition"
        />
      </div>
      <div>
        <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-1">
          <User class="w-5 h-5 text-purple-500" /> Apellido
        </label>
        <input
          type="text"
          name="apellido"
          required
          placeholder="Ej. López"
          class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:black transition"
        />
      </div>
    </div>

    <!-- Correo -->
    <div>
      <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-1">
        <Mail class="w-5 h-5 text-purple-500" /> Correo electrónico
      </label>
      <input
        type="email"
        name="email"
        required
        placeholder="tucorreo@email.com"
        class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:black transition"
      />
    </div>

    <!-- Teléfono o WhatsApp -->
    <div>
      <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-1">
        <Phone class="w-5 h-5 text-purple-500" /> Teléfono / WhatsApp
      </label>
      <input
        type="tel"
        name="telefono"
        placeholder="Ej. +52 55 1234 5678"
        class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:black transition"
      />
    </div>
        <!-- Empresa -->
    <div>
      <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-1">
        <Building2 class="w-5 h-5 text-purple-500" /> Empresa
      </label>
      <input
        type="text"
        name="empresa"
        placeholder="Nombre de la empresa"
        class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:black transition"
      />
    </div>

    <!-- Solución de interés -->
    <div>
      <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-1">
        <CircleHelp class="w-5 h-5 text-purple-500" /> ¿Con que producto estás teniendo problema?
      </label>
      <select
        name="solucion"
        required
        class="w-full px-4 py-3 border border-gray-300 rounded-xl bg-white text-gray-800 focus:outline-none focus:ring-2 focus:black transition"
      >
        <option value="" disabled selected>Selecciona una opción</option>
        <option value="conecta-cripto">Conecta Cripto</option>
        <option value="hermes">Hermes</option>
        <option value="google-cloud">Google Cloud Partner</option>
      
      </select>
    </div>

<!-- Póliza -->
<div>
  <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-1">
    <FileLock class="w-5 h-5 text-purple-500" /> Póliza
  </label>
  <select
    name="poliza"
    required
    class="w-full px-4 py-3 border border-gray-300 rounded-xl bg-white text-gray-800 focus:outline-none focus:ring-2 focus:black transition"
  >
    <option value="" disabled selected>Selecciona el estado de tu póliza</option>
    <option value="con-vigencia">Con vigencia</option>
    <option value="sin-vigencia">Sin vigencia</option>
  </select>
</div>

    <!-- Nombre del problema -->
    <div>
      <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-1">
        <FileSearch class="w-5 h-5 text-purple-500" /> Nombre del problema
      </label>
      <input
        type="text"
        name="nombre_problema"
        required
        placeholder="Ej. Error en la conexión"
        class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:black transition"
      />
    </div>

    <!-- Descripción del problema -->
    <div>
      <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-1">
        <FileText class="w-5 h-5 text-purple-500" /> Descripción del problema
      </label>
      <textarea
        name="descripcion_problema"
        rows="4"
        required
        placeholder="Describe detalladamente el problema..."
        class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:black transition resize-none"
      ></textarea>
    </div>


<!-- Compartir evidencia -->
<div>
  <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-2">
    <FileImage class="w-5 h-5 text-purple-500" /> Compartir evidencia
  </label>
  <label class="flex flex-col items-center justify-center w-full h-32 border-2 border-dashed border-gray-300 rounded-xl cursor-pointer hover:black transition text-center text-gray-500 text-sm">
    <span class="mb-1">Haz clic para seleccionar un archivo</span>
    <span class="text-xs text-gray-400">(Imágenes o PDF)</span>
    <input type="file" name="evidencia_compartida" accept="image/*,application/pdf" class="hidden" />
  </label>
</div>

<!-- Adjuntar evidencias -->
<div>
  <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-2">
    <FilePlus class="w-5 h-5 text-purple-500" /> Adjuntar evidencias
  </label>
  <label class="flex flex-col items-center justify-center w-full h-32 border-2 border-dashed border-gray-300 rounded-xl cursor-pointer hover:black transition text-center text-gray-500 text-sm">
    <span class="mb-1">Haz clic para seleccionar múltiples archivos</span>
    <span class="text-xs text-gray-400">(Máx. 10 MB - Imágenes o PDF)</span>
    <input type="file" name="evidencias_adicionales" accept="image/*,application/pdf" multiple class="hidden" />
  </label>
</div>

    <!-- Botón -->
   <BotonFlotanteAnimado 
        texto="Enviar Mensaje" 
        type="submit" 
        color="#000000" 
        client:load 
      />
  </form>
</section>
</Layout>