---
import HeroAnimatedGradient from '../components/movimiento/HeroAnimatedGradient.jsx'; // Asegúrate que esté en esta ruta
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Página no encontrada</title>
    <style>
      body {
        margin: 0;
        font-family: 'Poppins', sans-serif;
        background-color: #FAFAFA;
        color: #333;
      }

      .header {
        display: flex;
        align-items: center;
        padding: 1.5rem 2rem;
      }

      .header img {
        height: 50px;
      }

      .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 2rem;
        gap: 1.5rem;
      }

      .container img.gif {
        max-width: 100%;
        width: 300px;
        height: auto;
      }

      .phrase {
        font-size: 1.5rem;
        font-weight: 500;
        margin-top: 1rem;
      }

      .error-code {
        font-size: 5rem;
        font-weight: bold;
      }

      .home-button {
        display: inline-block;
        margin-top: 1rem;
        padding: 0.75rem 1.5rem;
        background-color: #800080;
        color: white;
        text-decoration: none;
        font-size: 1rem;
        border-radius: 8px;
        transition: background 0.3s;
      }

      .home-button:hover {
        background-color: #5a005a;
      }

      /* Gradient animation */
      @keyframes shimmer {
        0% {
          background-position: 200% 0;
        }
        100% {
          background-position: 0% 0;
        }
      }

      .animated-gradient-text {
        display: inline-block;
        background-size: 200% 100%;
        background-clip: text;
        -webkit-background-clip: text;
        color: transparent;
        -webkit-text-fill-color: transparent;
        animation: shimmer 4s linear infinite alternate;
      }
    </style>
  </head>

  <body>
    <!-- Logo arriba a la izquierda -->
    <header class="header">
      <img src="/logo.svg" alt="Logo Conecta" />
    </header>

    <!-- Contenido central -->
    <main class="container">
      <!-- GIF -->
      <img src="/ghost.gif" alt="Fantasma" class="gif" />

      <!-- Mensaje -->
      <div class="phrase">¡Te encontraste con una página fantasma!</div>

      <!-- 404 con gradiente animado -->
      <div class="error-code">
        <HeroAnimatedGradient texto="404" color="#800080" />
      </div>

      <!-- Botón al home -->
      <a href="/" class="home-button">Volver al Home</a>
    </main>
  </body>
</html>
