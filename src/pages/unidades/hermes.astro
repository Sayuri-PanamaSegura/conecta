    </div>

    <!-- Etiquetas -->
    <div class="absolute inset-0 flex justify-center items-center pointer-events-none z-20">
      <div class="relative w-full h-full">

        <!-- Top -->
        <div class="absolute top-[-20px] left-1/2 transform -translate-x-1/2 pointer-events-auto">
          <div class="etiqueta">Cifrado de archivos</div>
        </div>

        <!-- Top right -->
        <div class="absolute top-[10%] right-[-30px] pointer-events-auto">
          <div class="etiqueta">Gateway SPEI®</div>
        </div>

        <!-- Right -->
        <div class="absolute top-1/2 right-[-70px] transform -translate-y-1/2 pointer-events-auto">
          <div class="etiqueta">Consultoría SPEI® en general</div>
        </div>

        <!-- Bottom right -->
        <div class="absolute bottom-[10%] right-[-30px] pointer-events-auto">
          <div class="etiqueta">Core Transaccional</div>
        </div>

        <!-- Bottom -->
        <div class="absolute bottom-[-20px] left-1/2 transform -translate-x-1/2 pointer-events-auto">
          <div class="etiqueta">Transmisor de dinero</div>
