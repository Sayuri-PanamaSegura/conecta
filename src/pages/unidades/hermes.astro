              <p class="text-base font-medium text-black mx-auto">Caja de Ahorro</p>
            </div>

            <!-- Tarjeta 2 -->
            <div class="flex items-center bg-white rounded-xl p-4 text-center shadow w-full max-w-[200px]">
              <p class="text-base font-medium text-black mx-auto">Fintechs</p>
